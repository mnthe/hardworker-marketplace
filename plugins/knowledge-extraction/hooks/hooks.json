{
  "description": "Knowledge Extraction plugin hooks for automatic insight extraction and recommendations",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/auto-extract-insight.js",
            "timeout": 10000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/auto-extract-insight.js",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
