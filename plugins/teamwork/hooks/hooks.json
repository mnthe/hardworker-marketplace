{
  "version": "1.0",
  "description": "Teamwork plugin hooks for continuous worker mode and evidence collection",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/loop-detector.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/evidence-capture.js"
          }
        ]
      }
    ]
  }
}
